<div class="memory">
<h1>
  検索結果
</h1>
<%# 検索結果の個数で条件分岐 %>
<% if @results.length !=0 %>
  <% @results.each do |result| %>
    <td>
    <br>
    <li>
      <%= image_tag result.image.variant(resize: '500x500'), class: 'memory-image' if result.image.attached? %>
      <br>
      <%= result.image %>
      <br>
      <%= result.year %>/<%= result.month %>/<%= result.day%>
      <br>
      <%= result.place %>
      <br>
      <%= result.weather.name %>
      <br>
      <%= result.prefecture.name %>
      <br>
      <%= result.scene.name %>
      <br>
      <%= result.price.name %>
      <br>
      <%= result.with_who %>
      <br>
      <%= result.comment %>
    </li>
  <% end %>
<% else %>
  該当する思い出はありません
<% end %>
<br>
<%= link_to 'トップページへ戻る', root_path %>
</div>